{
  "name": "@maxbeatty/style-guide",
  "version": "1.0.0",
  "description": "Style guide for TypeScript, ESLint, and Prettier",
  "type": "module",
  "exports": {
    "./eslint/*": "./eslint/*.js",
    "./prettier": "./prettier/index.js"
  },
  "scripts": {
    "eslint": "eslint --cache --max-warnings 0 .",
    "prepare": "husky",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "github.com/maxbeatty/style-guide"
  },
  "keywords": [
    "style",
    "linter",
    "tsconfig",
    "eslint",
    "eslintconfig",
    "prettier"
  ],
  "author": "Max Beatty",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": "./prettier/index.js",
  "peerDependencies": {
    "eslint": ">=9",
    "prettier": ">=3"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@eslint/js": "^9.14.0",
    "globals": "^15.12.0"
  }
}
